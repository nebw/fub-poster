%==============================================================================

  \definecolor{color0}  {RGB}{0,0,0} %%% text color
  \definecolor{color1}  {RGB}{178,204,51} %%% title and subsection color
  \definecolor{color2}  {RGB}{0,51,102} %%% section color
  \definecolor{color3}  {RGB}{255,255,255} %%% background color

