%==============================================================================
% build the poster title
%==============================================================================
\setbeamertemplate{headline}{
 \leavevmode
  \begin{columns}
   \begin{column}{0.125\linewidth}
    \begin{flushleft}
     \includegraphics[width=\linewidth]{image/biorobotics}
    \end{flushleft}
   \end{column}
   \begin{column}{.6\linewidth}
    \centering
   \end{column}
   \begin{column}{0.225\linewidth}
    \begin{flushright}
     \includegraphics[width=\linewidth]{image/fuberlin}
    \end{flushright}
   \end{column}
  \end{columns}

\begin{beamercolorbox}[wd=\paperwidth,sep=2cm,leftskip=3.5cm]{colorbar}
    {\color{color2} \Huge{\inserttitle}}
\end{beamercolorbox}

\vspace{1cm}
\leavevmode
\begin{columns}
    \begin{column}{\linewidth}
        {\color{fg} \large{\insertauthor}\\}
        {\color{fg} \normalsize{\insertinstitute}}
    \end{column}
\end{columns}
}


%==============================================================================
% build the poster foot
%==============================================================================
\setbeamertemplate{footline}{
 \leavevmode
    \vskip2cm
  \begin{center}
\begin{minipage}[c][3cm][c]{0.95\textwidth}
  \begin{center}
%
     \begin{flushleft}
     \vskip-1cm
     \begin{tikzpicture}[
remember picture,overlay,
%background rectangle/.style={fill=color3},show background rectangle
]
       \shade [inner color=color1,outer color=color3] (0,0) rectangle (\textwidth,0.3cm);
     \end{tikzpicture}
     \end{flushleft}
%
  \vskip1cm
    \centering
    %\usebeamercolor{title in headline}
{\color{fg} \normalsize{\insertshorttitle}}
%
  \end{center}
\end{minipage}
  \end{center}
    \vskip1cm
}

